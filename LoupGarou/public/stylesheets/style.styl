body {
    padding: 50px;
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
}
a {
    color: #00B7FF
}
.clear {
    clear: both;
}

#playerSection{
    width: 500px;
    height: 500px;
    position: relative;
    border: solid blue 2px;
    float:left;
}

.playerSeat{
    width: 50px;
    height: 50px;
    border: solid black 2px;
    position: absolute;
}

#cardsChoice{
    float:left;
    height: 500px;
    width: 200px;
}

.cardPick {
    width: 50px;
    height: 50px;
    float:left;
    margin: 5px 5px;
}

.cardImg{
    width:100%;
    height:100%;
}